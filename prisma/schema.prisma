datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  password     String
  isInfluencer Boolean @default(false)
  channelName  String
  videos       Video[]
}

model Video {
  id          String @id @default(uuid())
  title       String
  url         String
  description String
  senderName  String
  userId      String // ID do usuário que criou o vídeo
  user        User   @relation(fields: [userId], references: [id]) // Relacionamento com o User
}
